@model Modelos.SimulacaoLista.PermissoesDaSimulacao
@{
    ViewBag.Title = "Incluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col col-12">
            <h3>Nova regra de vizualização da Simulação</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        @using (Html.BeginForm("Incluir", "SimuladorPermissoes", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_Permissoes")

            <hr />
            <input type="submit" class="btn btn-danger" value="Salvar" />
            @Html.ActionLink("Voltar", "Index", "SimuladorPermissoes", new { Area = "SimulacaoLista" }, new { @class = "btn btn-outline-success" })

            <div class="toaster">
                @Html.ValidationMessageFor(p => p.NivelMaximo)
            </div>

            <div class="toaster">
                @Html.ValidationMessageFor(p => p.Role)
            </div>

            <div class="toaster">
                @Html.ValidationMessageFor(p => p.DiscoverCustos)
            </div>
            <div class="toaster">
                @Html.ValidationMessageFor(p=> p.FazAprovacao)
            </div>

            
        }
    </div>
</div>

