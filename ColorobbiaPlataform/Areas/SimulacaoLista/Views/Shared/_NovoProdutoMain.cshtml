@model Modelos.Cadastros.Produtos.ProdutoModelView

<div class="form-group">
    @Html.LabelFor(parametro => parametro.Filial)
    @Html.DropDownList("Filial", null, String.Empty, new { Id = "Filial", @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(p => p.Descricao)
    @Html.TextBoxFor(p => p.Descricao, htmlAttributes: new { @class = "form-control" }, useNativeUnobtrusiveAttributes: true)
</div>
<div class="form-group">
    @Html.LabelFor(p => p.Familia)
    @Html.TextBoxFor(p => p.Familia, htmlAttributes: new { @class = "form-control" }, useNativeUnobtrusiveAttributes: true)
</div>


