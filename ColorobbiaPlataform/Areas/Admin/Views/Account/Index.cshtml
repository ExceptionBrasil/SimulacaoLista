@model IList<Modelos.Admin.Usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-fluid">
    <div class="row">
        <div class="col col-lg-6 col-md-4 col-sm-12">
            <img src="~/Content/Imagens/Icons/add-64.png" width="32px" />
            @Html.ActionLink("Novo usuário", "Incluir", "Account", new { area = "Admin" })
        </div>
        <br />
        <br />
        <br />
    </div>
</div>

<div class="container">
    <div class="row">
        <fieldset>
            <legend><img src="~/Content/Imagens/Icons/usuario-80.png" width="48px" />Cadastro de Usuários</legend>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Email</th>
                        <th>Data de Criação</th>
                        <th>Último Acesso</th>
                        <th>Ativo</th>
                        <th colspan="3">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>
                            <td>@u.Email</td>
                            <td>@u.DataCriacao</td>
                            <td>@u.LastAcess</td>
                            @if (u.Ativo)
                            {
                                <td><img src="~/Content/Imagens/Icons/cancelar-48.png" class="ico"/></td>

                            }
                            else
                            {
                                <td><img src="~/Content/Imagens/Icons/approval.png" class="ico"/></td>
                            }
                            <td><a href="@Url.Action("Alterar","Account",new {area="Admin",id=u.Id })"><img src="~/Content/Imagens/Icons/lápis-24.png" class="ico" /> </a></td>
                            <td><a href="@Url.Action("Inativar","Account",new {area="Admin",id=u.Id })"><img src="~/Content/Imagens/Icons/remove-user-male.png" class="ico" /> </a></td>
                            <td><a href="@Url.Action("Vizualizar","Account",new {area="Admin",id=u.Id })"><img src="~/Content/Imagens/Icons/visualizar-arquivo-48.png" class="ico" /> </a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </fieldset>
    </div>
</div>
