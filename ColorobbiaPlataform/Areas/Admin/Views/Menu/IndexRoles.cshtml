@model IList<Modelos.Admin.Acessos.Role>
@{
    ViewBag.Title = "IndexRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="center">
        <h3><img src="~/Content/Imagens/Icons/lei-filled-50.png" width="32px" /> Cadastro de Regra de Menu</h3>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Regra</th>
                    <th colspan="3">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Description</td>
                    <td>@role.Value</td>
                    <td><a href="@Url.Action("AlterarRole", "Menu", new {area="Admin",id=role.Id})"><img src="~/Content/Imagens/Icons/lápis-24.png" height="24px" /></td>
                    <td><a href="@Url.Action("ExcluirRole","Menu",new { area="Admin",id=role.Id})"><img src="~/Content/Imagens/Icons/apagar-64.png" height="24px" /></a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

