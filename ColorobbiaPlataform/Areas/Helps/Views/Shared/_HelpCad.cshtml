@model Modelos.Helps.HelpView

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(r => r.Role)
    @Html.DropDownList("Role", null, String.Empty, new { id = "Role", @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.DataPublicacao)
    @Html.TextBoxFor(model => model.DataPublicacao, useNativeUnobtrusiveAttributes: true, htmlAttributes: new { @class = "form-control", @type = "date" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.DataExpiracao)
    @Html.TextBoxFor(model => model.DataExpiracao, useNativeUnobtrusiveAttributes: true, htmlAttributes: new { @class = "form-control", @type = "date" })
    @Html.ValidationMessageFor(model => model.DataExpiracao, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    @Html.LabelFor(model=> model.AvisoGeral)
    @Html.CheckBoxFor(model=> model.AvisoGeral, new { @class= "form-check" })
</div>
